<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.postmessage.PostMessageFragment">


    <!--    Message layout for completed exercise. -->
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type Your Message : "
        android:textColor = "#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/geoMessageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_toRightOf="@id/message"
        android:hint="Your message here"
        android:layout_marginTop="60dp"
        android:textSize="25sp"/>

    <!--    Button to save message to SQLite DB-->
    <Button
        android:id="@+id/post_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/geoMessageText"
        android:layout_marginTop="120dp"
        android:background="#008000"
        android:text="Post Message"
        android:textColor="#ffffff"
        android:textSize="20sp" />

</FrameLayout>